@model Item

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Create New Item";
    ViewData["BodyClass"] = "create-page";  // Custom class for the create page
}

<h2>Create New Item</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label><span class="text-danger">*</span>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label><span class="text-danger">*</span>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <!-- Add flexbox container to line buttons horizontally -->
    <div class="button-container">
        <!-- Styled submit button -->
        <button type="submit" class="button">Create</button>

        <!-- Styled Back to Table View button with gray color -->
        <a asp-action="Table" class="button back-button">Back to Table View</a>
    </div>
</form>
