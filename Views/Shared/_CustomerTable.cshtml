@model IEnumerable<Customer>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Customer Table";
    ViewData["BodyClass"] = "customer-page";  // Add this line to set the body class for the page
}

<div class="container">
    <h2 class="my-4">Customer List</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Orders</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.CustomerId</td>
                    <td>@customer.Name</td>
                    <td>@customer.Address</td>
                    <td>
                        @if (customer.Orders != null)
                        {
                            <p>@string.Join(", ", customer.Orders.Select(order => $"Order{order.OrderId}"))</p>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

