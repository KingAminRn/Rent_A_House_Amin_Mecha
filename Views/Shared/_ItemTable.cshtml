@model IEnumerable<Item>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<div class="container">
    <p class="mt-3">
        <a class="btn btn-create-item" asp-controller="Item" asp-action="Create">Create New Rental</a>

    </p>
    <table class="table table-striped table-lightblue">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemId</td>
                <td>@item.Name</td>
                <td>@item.Price.ToString("0.00 NOK")</td>
                <td>@item.Description</td>

                <td>
                    <img src="@item.ImageUrl" alt="Item Image" class="img-fluid"
                         style="width: 120px; height: 80px; object-fit: cover; border-radius: 5px;" />
                </td>

                <td>
                    <a asp-action="Update" asp-route-id="@item.ItemId"
                       class="btn btn-primary btn-sm"
                       style="width: 100px; margin-right: 10px;">Update</a>

                    <a asp-action="Delete" asp-route-id="@item.ItemId"
                       class="btn btn-danger btn-sm"
                       style="width: 100px;">Delete</a>
                </td>

            </tr>
        }
    </table>
    

</div>
